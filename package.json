{
  "name": "zod-temporal",
  "version": "0.0.0",
  "description": "Zod extension for supporting the Temporal API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc && npx eslint . && prettier . --check",
    "format": "prettier . --write",
    "release": "npm run build && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klevente/zod-temporal.git"
  },
  "keywords": [
    "zod",
    "temporal",
    "typescript"
  ],
  "author": "Levente Krizs√°n",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/klevente/zod-temporal/issues"
  },
  "homepage": "https://github.com/klevente/zod-temporal#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "^2.8.3",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vitest": "^0.28.4"
  },
  "peerDependencies": {
    "@js-temporal/polyfill": "0.x",
    "zod": "3.x"
  }
}
